<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cards"
    >


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/Card_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        >
        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            tools:src="@tools:sample/avatars"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_gravity="left"
            style="@style/title"
            android:id="@+id/titleMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <com.google.android.material.textview.MaterialTextView
            android:layout_gravity="left"
            style="@style/subheading1"
            android:id="@+id/teamSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/team_size"
            />
            <com.google.android.material.textview.MaterialTextView

                android:layout_gravity="center_vertical"
                android:id="@+id/teamSizeContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/team_size"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_margin="@dimen/margin_v_small"
                tools:text="3 to 5"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <com.google.android.material.textview.MaterialTextView

            android:id="@+id/starts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/starts"
            style="@style/subheading2"
            />
            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/startsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_size"
                style="@style/body2"
                tools:text="May 21, 2021"

                />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4"
            >
        <com.google.android.material.textview.MaterialTextView

            android:id="@+id/ends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ends"
            style="@style/subheading2"
            />
            <com.google.android.material.textview.MaterialTextView

                android:id="@+id/endsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_size"
                tools:text="May 21, 2021"
                android:gravity="left"
                style="@style/body2"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/knowmore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_v_small"
                android:text="@string/know_more"
                android:clickable="true"
                android:textColor="@color/pill_button"
                />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>
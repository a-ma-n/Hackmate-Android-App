<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="cards" parent ="Widget.MaterialComponents.CardView">
        <item name="background">@color/card_color</item>
        <item name="textAppearanceHeadline5">@color/white</item>
        <item name="textAppearanceBody1">@color/white</item>
        <item name="textAppearanceBody2">@color/text_secondary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxBackgroundColor">@color/field_fill</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="strokeWidth">0dp</item>

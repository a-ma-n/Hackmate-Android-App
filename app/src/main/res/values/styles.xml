    <style name="SpinnerDropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxBackgroundColor">@color/field_fill</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="strokeWidth">0dp</item>
        <item name="endIconTint">@color/text_secondary</item>
    </style>

    <style name="mail_fields" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/mail_pass_fields</item>
        <item name="android:fontWeight">300</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/text_secondary</item>

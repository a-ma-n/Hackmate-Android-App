    <style name="buttonText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontWeight">700</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="green_bg_button" parent="@style/Widget.AppCompat.Button">
